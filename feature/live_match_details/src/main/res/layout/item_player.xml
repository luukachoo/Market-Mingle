<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivPlayerFirst"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedShapeForImageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPlayerFirstUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:lines="1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivPlayerFirst"
        app:layout_constraintEnd_toStartOf="@+id/tvPlayerFirstNationality"
        app:layout_constraintStart_toEndOf="@+id/ivPlayerFirst"
        app:layout_constraintTop_toTopOf="@+id/ivPlayerFirst"
        tools:text="Username" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPlayerFirstNationality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="@string/ge"
        app:layout_constraintBottom_toBottomOf="@+id/tvPlayerFirstUsername"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/tvPlayerFirstUsername" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivPlayerSecond"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedShapeForImageView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPlayerSecondUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:gravity="end"
        android:lines="1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivPlayerSecond"
        app:layout_constraintEnd_toStartOf="@+id/ivPlayerSecond"
        app:layout_constraintStart_toEndOf="@+id/tvPlayerSecondNationality"
        app:layout_constraintTop_toTopOf="@+id/ivPlayerSecond"
        tools:text="Username" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPlayerSecondNationality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/ge"
        app:layout_constraintBottom_toBottomOf="@+id/tvPlayerSecondUsername"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/tvPlayerSecondUsername" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50121653" />

</androidx.constraintlayout.widget.ConstraintLayout>