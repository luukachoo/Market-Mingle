<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feature_live_match_details_nav_graph"
    app:startDestination="@id/matchDetailsFragment">

    <fragment
        android:id="@+id/matchDetailsFragment"
        android:name="com.feature.live_match_details.screen.MatchDetailsFragment"
        android:label="fragment_match_details"
        tools:layout="@layout/fragment_match_details">

        <deepLink app:uri="market-mingle://feature.live_match_details/fragment_match_details?matchId={matchId}" />

        <argument
            android:name="matchId"
            app:argType="integer" />
    </fragment>
</navigation>